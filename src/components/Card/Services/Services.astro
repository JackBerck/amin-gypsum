---
const info = [
  {
    title: "Pemasangan Gypsum",
    desc: "Amin Gypsum menyediakan layanan pemasangan gypsum profesional untuk berbagai jenis bangunan, mulai dari rumah tinggal, kantor, hingga gedung komersial. Tim kami terdiri dari ahli yang berpengalaman dan terlatih, siap membantu Anda dalam mewujudkan desain interior impian.",
    img: "/img/services/jobs/pemasangan-gypsum.jpg",
  },
  {
    title: "Jual Beli",
    desc: "Kami menawarkan berbagai macam produk gypsum, mulai dari papan gypsum standar, gypsum tahan air, hingga gypsum tahan api. Kami memberikan harga yang kompetitif dan layanan pengiriman yang cepat, serta kualitas yang sudah teruji untuk memenuhi kebutuhan Anda.",
    img: "/img/services/jobs/jual-beli-gypsum.jpg",
  },
  {
    title: "Konsultasi",
    desc: "Tim ahli konsultasi kami siap membantu dalam perencanaan, pemilihan material, hingga memberikan rekomendasi desain yang optimal. Anda akan mendapatkan informasi dan saran yang tepat untuk memastikan proyek Anda sesuai harapan.",
    img: "/img/services/jobs/konsultasi-gypsum.jpg",
  },
];
---

<section id="service" class="pt-10 pb-16 bg-slate-100 font-poppins">
  <div class="container">
    <div class="w-full px-4 md:px-8 lg:px-16">
      <div class="max-w-xl mb-6 m-auto text-center">
        <h4 class="font-semibold text-primary mb-2 text-md">
          Kuat, Cepat, dan Tepat
        </h4>
        <h2 class="font-bold text-dark text-lg mb-4 m:text-xl lg:text-2xl">
          Bersama Amin Gypsum
        </h2>
        <p class="font-medium text-sm text-secondary md:text-md">
          Belanja gypsum yang kuat dengan layanan cepat dan produk yang tepat.
        </p>
      </div>
      <div class="max-w-full px-4 flex flex-wrap justify-center text-center">
        {
          info.map((data, index) => (
            <div class="mb-12 p-4 md:w-1/2 lg:w-1/3">
              <div class="rounded-md shadow-xl overflow-hidden transform transition duration-500 hover:scale-110">
                <img
                  class="h-48 w-full object-cover object-center"
                  src={data.img}
                  alt={data.title}
                />
                <div class="p-4">
                  <h1 class="title-font mb-4 text-base md:text-lg font-bold text-dark">
                    {data.title}
                  </h1>
                  <p class="mb-3 text-xs md:text-base text-left">{data.desc}</p>
                  <div class="flex items-center flex-wrap">
                    <a
                      class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0 text-xs sm:text-sm md:text-base"
                      href="#"
                    >
                      Baca Lebih Lanjut
                      <svg
                        class="w-4 h-4 ml-2"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="2"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M5 12h14" />
                        <path d="M12 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
